{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "types/env.d.ts",
    "types/auto-imports.d.ts",
    "types/shims-vue.d.ts",
    "types/database.d.ts",
    "types/core.d.ts",
    "types/*",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}